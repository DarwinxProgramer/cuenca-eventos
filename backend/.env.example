# Backend Environment Variables
# Copia este archivo como `.env` en el directorio /backend/ y configura los valores

# ============================================
# APLICACIÓN
# ============================================
APP_NAME=Cuenca Eventos API
VERSION=1.0.0
ENVIRONMENT=development  # development, staging, production

# ============================================
# MONGODB
# ============================================
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=cuenca_eventos

# Para MongoDB Atlas (producción):
# MONGODB_URL=mongodb+srv://usuario:password@cluster.mongodb.net/?retryWrites=true&w=majority

# ============================================
# REDIS (Caché)
# ============================================
REDIS_URL=redis://localhost:6379/0

# Para Redis en producción con contraseña:
# REDIS_URL=redis://:password@hostname:6379/0

# ============================================
# SEGURIDAD - JWT
# ============================================
# IMPORTANTE: Cambiar en producción con una clave segura
# Generar con: openssl rand -hex 32
SECRET_KEY=tu_clave_secreta_super_segura_aqui_cambiar_en_produccion
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# CORS (Orígenes permitidos)
# ============================================
# En desarrollo: http://localhost:5173
# En producción: https://tu-dominio.com
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# SERVIDOR
# ============================================
HOST=0.0.0.0
PORT=3001

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================
# UPLOADS & STORAGE
# ============================================
# Tamaño máximo de archivo en MB
MAX_UPLOAD_SIZE_MB=10

# GridFS para almacenamiento de imágenes (ya configurado con MongoDB)

# ============================================
# ADMIN DEFAULT (Primera ejecución)
# ============================================
# Usuario admin creado automáticamente en la primera ejecución
ADMIN_EMAIL=admin@gmail.com
ADMIN_PASSWORD=admin123  # CAMBIAR EN PRODUCCIÓN
ADMIN_NAME=Administrador
